        <div>
            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="fname" placeholder="Beatriz" minlength="2" required>
        </div>
         
         <br>
         <!-- Last Name-->
        <div>
            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="lname" placeholder="Oliveira" minlength="2" required>
        </div>
         
         <br>
        <!-- email-->
        <!-- input type email makes it mandatory to use an @-->
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="example@gmail.com" required>
        </div>

          <br>
        <!-- color selection-->
        <div>
            <label for="color">Select a color:</label>
            <select id="color" name="color" required>
                
              <!-- first option is to not show a selection directly -->
                <option value="" disabled selected>Select a color</option>
                <option value="purple">Purple</option>
                <option value="black">Black</option>
                <option value="white">White</option>
            </select>    
        </div>

        <br>
        
        <!-- size selection-->
        <div>
            <label for="size">Select a size:</label>
            <select id="size" name="size" required>

              <!-- first option is to not show a selection directly -->
                <option value="" disabled selected>Select a size</option>
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
                <option value="XXL">XXL</option>
            </select>    
         </div>

         <br>

        <!-- button-->
         <div>
           <button type="submit">Send</button>
         </div>
        <!-- 
          try writing out the requirements first as comments
        this will also help you fill in your PR message later-->
      </form>
